@model IndexModel<TeacherDTO, TeacherParameters>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-DepartmentId="@Model.Parameters.DepartmentId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First name
            </th>
            <th>
                First last
            </th>
            <th>
                Science degree
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScienceDegree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>Page</p>
<component type="typeof(PageNavigationLine)" render-mode="ServerPrerendered"
           param-Parameters="@Model.Parameters" param-ControllerName="@("teachers")"
           param-MaxPageNumber="@Model.Metadata.MaxPageNumber" />
<br />
<a asp-controller="Depattments" asp-action="Details" asp-route-id="@Model.Parameters.DepartmentId">Back</a>
