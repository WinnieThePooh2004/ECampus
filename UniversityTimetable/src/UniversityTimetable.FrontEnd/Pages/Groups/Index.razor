@page "/groups/{DepartmentId:int}"
<DataTable TData="GroupDto" TParameters="GroupParameters"
           SearchTerms="@(new List<(string placeHolder, Expression<Func<GroupParameters, string?>>)> { ("name", parameters => parameters.Name) })"
           ParameterOptions="@(p => { p.DepartmentId = DepartmentId; p.OrderBy = "Name"; })"
           TableHeaders="@(new List<(string, string)>{("name", "Name")})"
           TableData="@(new List<Func<GroupDto, string>> { g => g.Name })"
           CreateLink="@($"/groups/Create/{DepartmentId}")"
           EditLink="/groups/edit"
           ActionLinks="@(new List<(string, Func<GroupDto, string>)> { ("Timetable", g => $"/timetable/group/{g.Id}"),
                            ("students", g => $"/students/{g.Id}") })"/>