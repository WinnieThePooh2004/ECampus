@page "/groups/{DepartmentId:int}"
<DataTable TData="GroupDto" TParameters="GroupParameters"
                ParameterOptions="p => p.DepartmentId = DepartmentId"
                TableHeaders="@(new List<string> { "Last name", "First name" })"
                TableData="@(new List<Func<GroupDto, string>> { g => g.Name })"
                CreateLink="@($"/groups/Create/{DepartmentId}")"
                EditLink="/groups/edit"
                ActionLinks="@(new List<(string, Func<GroupDto, string>)> { ("Timetable", d => $"/timetable/group/{d.Id}")})" />
