@page "/timetable/teacher/{TeacherId:int}"

<TimetableModel CreateLink="@((day, number) => $"timetable/Create/{(int)TimetableMode.Teacher}/{TeacherId}")"
        EditLink="@($"timetable/edit/{(int)TimetableMode.Teacher}")"
        DescriptionList="@(new(){ c => $"{c.Subject.Name} {c.ClassType}", c => $"Group {c.Group.Name}",
        c => $"Building: {c.Auditory.Building}, aud: {c.Auditory.Name}" })"
        RefreshData="@(requests => requests.TeacherTimetable(TeacherId))" />

@code{
    [Parameter] public int TeacherId { get; set; }
}