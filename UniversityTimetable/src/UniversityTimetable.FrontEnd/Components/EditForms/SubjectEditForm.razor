@inherits ModelEditForm<SubjectDto>
<EditForm Model="Model" OnValidSubmit="Submit">
    <FluentValidationValidator Validator="Validator" />
    <div class="row">
        <div class="col-md-4">
            <p>
                <label for="@Model.Name">Name</label>
                <InputText @bind-Value="Model.Name" />
                <ValidationMessage For="@(() => Model.Name)" />
            </p>
            <table class="table">
                <tr>
                    <th>
                        First name
                    </th>
                    <th>
                        Last name
                    </th>
                </tr>
                @foreach (var teacher in Model.Teachers)
                {
                    <tr>
                        <td>
                            @teacher.FirstName
                        </td>
                        <td>
                            @teacher.LastName
                        </td>
                    </tr>
                }
            </table>
            <br /><br />
            <MultipleItemsSelect TData="TeacherDto" TParameters="TeacherParameters" OnAdd="OnTeacherAdd" OnDelete="OnTeacherRemove"
                                 SelectTo="@Model.Teachers"
                                 PropertyNames="@(new(){ "First name", "Last name" })" PropertiesToShow="@(new(){ t => t.FirstName, t => t.LastName })" />
            <br />
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
</EditForm>