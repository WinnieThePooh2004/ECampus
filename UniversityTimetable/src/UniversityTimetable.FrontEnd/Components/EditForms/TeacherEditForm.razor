@inherits ModelEditForm<TeacherDto>
<div class="row">
    <div class="col-md-4">

        <EditForm Model="Model" OnValidSubmit="Submit">
            <FluentValidationValidator Validator="Validator" />
            <ValidationSummary />
            <p>
                <label for="@Model.FirstName">First name</label>
                <InputText class="form-control" @bind-Value="Model.FirstName" />
                <ValidationMessage For="@(() => Model.FirstName)" />
            </p>
            <p>
                <label for="@Model.LastName">Last name</label>
                <InputText class="form-control" @bind-Value="Model.LastName" />
                <ValidationMessage For="@(() => Model.LastName)" />
            </p>
            <p>
                <label for="@Model.ScienceDegree">Science Degree</label>
                <InputSelect TValue="ScienceDegree" @bind-Value="Model.ScienceDegree">
                    <option value="@ScienceDegree.Master">Master</option>
                    <option value="@ScienceDegree.PhD">PhD</option>
                </InputSelect>
            </p>
            <table width="30%">
                <tr>
                    <th>
                        Name
                    </th>
                </tr>
                @foreach (var subject in Model.Subjects)
                {
                    <tr>
                        <td>
                            @subject.Name
                        </td>
                    </tr>
                }
            </table>
            <br /><br />
            <MultipleItemsSelect TData="SubjectDto" TParameters="SubjectParameters"
                                 SelectTo="Model.Subjects" OnAdd="AddSubject" OnDelete="DeleteSubject"
                                 PropertyNames="@(new(){ "Name" })" PropertiesToShow="@(new(){ t => t.Name })" />
            <button type="submit" class="btn btn-success">Save</button>
        </EditForm>
    </div>
</div>