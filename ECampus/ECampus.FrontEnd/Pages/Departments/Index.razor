@page "/departments/{FacultyId:int}"
@using ECampus.Domain.Requests.Department
@using ECampus.Domain.Responses.Department

<h1>Departments</h1>
<IndexPageModel TData="MultipleDepartmentResponse" TParameters="DepartmentParameters"
           ParameterOptions="@(p => { p.FacultyId = FacultyId; p.OrderBy = "Name"; })"
           CreateLink="@($"/departments/Create/{FacultyId}")"
           EditLink="/departments/edit"
           ActionLinks="@(new List<(string, Func<MultipleDepartmentResponse, string>)> { ("View teachers", d => $"/Teachers/{d.Id}"), ("View groups", d => $"/Groups/{d.Id}") })"/>