@page "/tasks/{CourseId:int}"

<h3>My tastks</h3>

@if (_enableEdit is null || _actionLinks is null)
{
    <p><em>Loading course data...</em></p>
    return;
}

<IndexPageModel TData="CourseTaskDto" TParameters="CourseTaskParameters"
                EditLink="/tasks/edit"
                CreateLink="@($"/tasks/create/{CourseId}")"
                ParameterOptions="parameters => parameters.CourseId = CourseId"
                EditEnabled="_enableEdit"
                ActionLinks="_actionLinks"/>
                