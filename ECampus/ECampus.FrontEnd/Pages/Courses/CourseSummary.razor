@page "/courses/Summary/{StudentId:int}"
@using ECampus.Domain.Requests.Course
@using ECampus.Domain.Responses.Course

<IndexPageModel TData="CourseSummaryResponse" TParameters="CourseSummaryParameters" EditEnabled="false"
                ParameterOptions="SetParameters"/>

@code{

    [Parameter] public int StudentId { get; set; }

    private void SetParameters(CourseSummaryParameters parameters)
    {
        parameters.StudentId = StudentId;
        parameters.OrderBy = nameof(CourseSummaryResponse.CourseId);
    }
}