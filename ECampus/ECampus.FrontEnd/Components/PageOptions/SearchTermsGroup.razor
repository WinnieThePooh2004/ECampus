@using ECampus.Domain.Extensions
@foreach (var searchTerm in SearchTerms)
{
    <InputText Value="@searchTerm.Item1.Compile()()"
               ValueExpression="searchTerm.Item1" @onblur="@(() => OnBlur.InvokeAsync())"
               ValueChanged="@(text => searchTerm.Item1.SetFromExpression(text))"
               style="background-color: rgb(235, 235, 235)" placeholder="@searchTerm.placeHolder"/>
}